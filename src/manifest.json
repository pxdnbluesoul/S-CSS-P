{
    "name": "S-CSS-P",
    "description": "A stylesheet picker for the SCP Wiki",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "*://scp-wiki.wikidot.com/*",
        "*://*.scp-wiki.net/*",
        "*://*.scpwiki.com/*",
        "*://scpnet.org/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://scp-wiki.wikidot.com/*",
                "*://*.scp-wiki.net/*",
                "*://*.scpwiki.com/*",
                "*://scpnet.org/*"
            ],
            "js": [
                "main.js",
                "options.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "s-css-p@o5command.com",
            "strict_min_version": "42.0"
        }
    },
    "web_accessible_resources": [
        "/css/*",
        "/img/*"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    }
}
